{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "iamplus",
  "version": "0.1.0",
  "identifier": "com.iamplus.dev",
  "build": {
    "frontendDist": "../dist",
    
    "devUrl": "http://localhost:5173/",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
   
    "windows": [
      {
   
        "title": "iamplus",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
       "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  
  "bundle": {
    
    "resources": ["resources/chat_app.sqlite"],
    "active": true,
    "targets": [], 
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
   
  }
}
